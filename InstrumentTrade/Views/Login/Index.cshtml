@model LoginViewModel
@{
    Layout = null;
}

<html>
<head>
    <meta charset="utf-8">
    <title>OneMusic Giriş Formu</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- MATERIAL DESIGN ICONIC FONT -->
    <link rel="stylesheet" href="~/colorlib-regform-21/fonts/material-design-iconic-font/css/material-design-iconic-font.min.css">

    <!-- STYLE CSS -->
    <link rel="stylesheet" href="~/colorlib-regform-21/css/style.css">
   <style>
    .wrapper {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        padding: 20px;
    }

    .inner {
        display: flex;
        background-color: #060c4c;
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0 0 30px rgba(0, 0, 0, 0.4);
        max-width: 1000px;
        width: 100%;
    }

    .inner form {
        flex: 1;
        padding: 40px;
        color: #fff;
    }

    .inner img {
        width: 500px;
        height: auto;
        object-fit: cover;
    }

    media screen and (max-width: 992px) {
        .inner {
            flex-direction: column;
        }

        .inner img {
            width: 100%;
            height: auto;
        }
    }
</style>

</head>

<body>

    <div class="wrapper">
        <div class="inner">
            <!-- FORM -->
            <form method="post">
                <h3>OneMusic Giriş Formu</h3>

                <div class="form-wrapper">
                    <label class="label-input">Kullanıcı Adı</label>
                    <input type="text" asp-for="UserName" class="form-control" required />
                </div>

                <div class="form-wrapper">
                    <label class="label-input">Şifre</label>
                    <input type="password" asp-for="Password" class="form-control" required />
                </div>

                <div style="color:red">
                    @Html.ValidationSummary()
                </div>

                <button type="submit">Giriş Yap</button>

                <br /><br /><br /><br />

                <a href="/Register/SignUp" class="btn btn-outline-primary" style="display: block; margin-top: 10px; text-align: center; padding: 10px; text-decoration: none; border: 1px solid #007bff; border-radius: 5px; color: #007bff;">
                    Kayıt Ol
                </a>
            </form>

            <!-- GÖRSEL (Güncellenmiş) -->
            <div>
                <img src="~/images/Gorsel.png" style="width:530px; height:450px;" alt="Enstrüman Görseli" />
            </div>
        </div>
    </div>

    <script src="~/colorlib-regform-21/js/jquery-3.3.1.min.js"></script>
    <script src="~/colorlib-regform-21/js/main.js"></script>
</body>
</html>
