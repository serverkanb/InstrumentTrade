@model List<AppUser>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h3>Kullanıcılar</h3>

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>#</th>
            <th>Ad Soyad</th>
            <th>Kullanıcı Adı</th>
            <th>Email</th>
            <th>Telefon</th>
            <th>Adres</th>
            <th>Şehir</th>
            <th>Ülke</th>
            <th>Aktiflik</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.Name @user.Surname</td>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>@user.PhoneNumber</td>
                <td>@user.Address</td>
                <td>@(user.City?.Name ?? "Şehir Yok")</td>
                <td>@(user.Country?.Name ?? "Ülke Yok")</td>
                <td>
                    <a class="btn btn-outline-info" asp-action="IsActive" asp-route-id="@user.Id">Güncelle</a>
                </td>
            </tr>
        }
    </tbody>
</table>

