@using InstrumenShop.EntityLayer.Entities
@model List<Category>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<h3>Kategoriler Sayfası</h3>

<table class="table table-bordered table-hover">

    <tr>
        <th>#</th>
        <th>Kategori Adı</th>
        <th>İşlemler</th>

    </tr>

    @foreach (var item in Model)
    {
        count++;
        <tr>
            <th>@count</th>
            <td>@item.Name</td>
            <td>
                <a class="btn btn-outline-danger" asp-action="DeleteCategory" asp-route-id="@item.Id" onclick="DeleteCategory">Sil</a>
                <a class="btn btn-outline-info" asp-action="UpdateCategory" asp-route-id="@item.Id">Güncelle</a>
            </td>

        </tr>
    }


</table>

<a class="btn btn-outline-primary" asp-action="CreateCategory">Yeni Kategori Ekleme</a>


<script>



    function DeleteCategory(id) {

        Swal.fire({
            title: "Silmek istediğinize emin misiniz?",
            text: "Bu işlemi geri alamazsınız!",
            icon: "warning",
            showCancelButton: true,
            confirmButtonColor: "#3085d6",
            cancelButtonColor: "#d33",
            confirmButtonText: "Evet, Sil!",
            cancelButtonText: "İptal"
        }).then((result) => {
            if (result.isConfirmed) {

                window.location.href = "/AdminCategory/DeleteCategory/" + id;

            }
        });

    }

</script>