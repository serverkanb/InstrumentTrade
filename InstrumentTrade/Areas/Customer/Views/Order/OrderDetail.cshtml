
@using InstrumentTrade.WebUI.Areas.Customer.Models
@model OrderViewModel
@{
    ViewData["Title"] = "OrderDetail";
    Layout = "~/Views/UILayout/Index.cshtml";
}

<div class="container mt-5 mb-5">
    <h2 class="text-center">Sipariş Detayı</h2>
    <hr />

    <div class="row">
        <!-- Sipariş Bilgileri -->
        <div class="col-md-6">
            <h4 class="mb-3">Sipariş Bilgileri</h4>
            <p><strong>Sipariş No:</strong> @Model.OrderId</p>
            <p><strong>Tarih:</strong> @Model.CreatedAt.ToString("dd.MM.yyyy")</p>
            <p><strong>Durum:</strong> @Model.Status</p>
            <p><strong>Toplam Tutar:</strong> @Model.TotalPrice ₺</p>
        </div>

        <!-- Teslimat Bilgileri -->
        <div class="col-md-6">
            <h4 class="mb-3">Teslimat Bilgileri</h4>
            <p><strong>Ad Soyad:</strong> @Model.FullName</p>
            <p><strong>Adres:</strong> @Model.FullAddress</p>
            <p><strong>Şehir:</strong> @Model.CityId</p>
            <p><strong>Ülke:</strong> @Model.CountryId</p>
        </div>
    </div>

    <hr />
    <h4>Ürünler</h4>
    <table class="table table-bordered text-center mt-3">
        <thead>
            <tr>
                <th>Ürün</th>
                <th>Resim</th>
                <th>Adet</th>
                <th>Birim Fiyat</th>
                <th>Toplam</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.CartItems)
            {
                <tr>
                    <td>@item.Product.Name</td>
                    <td>
                        <img src="@item.Product.ImageUrl" style="width: 80px; height: auto;" />
                    </td>
                    <td>@item.Quantity</td>
                    <td>@item.Product.Price ₺</td>
                    <td>@(item.Product.Price * item.Quantity) ₺</td>
                </tr>
            }
        </tbody>
    </table>
</div>
