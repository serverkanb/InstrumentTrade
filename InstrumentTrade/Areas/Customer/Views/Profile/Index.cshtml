@using InstrumentTrade.WebUI.Areas.Customer.Models
@model CustomerEditViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/UILayout/Index.cshtml";
}
<br />
<br />
<br />
<br />
<br />


<div class="container mt-5 mb-5">
    <h3 class="text-center font-weight-bold mb-4" style="font-size: 28px;">Profil Bilgileri Güncelleme Sayfası</h3>

    <form method="post" enctype="multipart/form-data">
        <div>
            <a asp-area="Customer" asp-controller="Profile" asp-action="ChangePassword">
                <i class="fa fa-key" aria-hidden="true"></i>
                <span class="padding_10">Şifre Değiştir</span>
            </a>
        </div>
        <div class="form-group">
            <label>Ad</label>
            <input asp-for="Name" class="form-control" />
        </div>
        <div class="form-group">
            <label>Soyad</label>
            <input asp-for="Surname" class="form-control" />
        </div>
        <div class="form-group">
            <label>Kullanıcı Adı</label>
            <input asp-for="UserName" class="form-control" />
        </div>
        <div class="form-group">
            <label>Email</label>
            <input asp-for="Email" class="form-control" />
        </div>
        <div class="form-group">
            <label>Telefon No</label>
            <input asp-for="PhoneNumber" class="form-control" />
        </div>

       @*  <div>
            <label>Ülke</label>
            <select asp-for="CountryId" asp-items="Model.Countries" class="form-control">
                <option value="">-- Ülke Seçin --</option>
            </select>
        </div>
        <div>
            <label>Şehir</label>
            <select asp-for="CityId" asp-items="Model.Cities" class="form-control">
                <option value="">-- Şehir Seçin --</option>
            </select>
        </div> *@
        <div class="form-group">
            <label>Açık Adres</label>
            <textarea asp-for="Address" rows="3" class="form-control"></textarea>
        </div>
     
        <div class="text-danger">
            @Html.ValidationSummary()
        </div>

        <button type="submit" class="btn btn-success btn-block mt-3">Bilgileri Güncelle</button>
    </form>
</div>

